             x:Class="CRM.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="grupoalmar.png"
                HeightRequest="185"
                Aspect="AspectFit"
